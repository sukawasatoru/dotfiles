[include]
	path = ~/.gitconfig.local
	path = ~/.gitconfig.mac
	path = ~/.gitconfig.ubuntu
[color]
	ui = auto
[core]
	editor = vim
	compression = 9
	autocrlf = false
[diff]
	algorithm = minimal
	compactionheuristic = true
[alias]
	logg = log --graph --pretty=fuller --show-signature --inter-hunk-context=20
	showw = show --pretty=fuller --show-signature --inter-hunk-context=20
	co = checkout
	grepp = grep --function-context
[push]
	default = simple
[log]
	follow = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[hub]
	protocol = https
# vim: noexpandtab
